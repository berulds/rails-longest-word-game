<h3>Welcome to the longest word-game!</h3>

<p>Here is your grid...</p>

<p><%= @letters %></p>

<form action="score" data-turbo="false" method="post" class="form-control">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="guess" value="<%= params[:guess] %>" placeholder="Type your guess here">
  <input type="submit" value="Guess!" class="btn btn-primary btn-m">
</form>
